{
  "compilerOptions": {
    "module": "esnext",
    "target": "es6",
    "noImplicitAny": false,
    "sourceMap": false,
    "rootDir": "src",
    "outDir": "public/js",
    "noEmitOnError": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "chrome"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  },
  "include": [
    "src"
  ]
}
